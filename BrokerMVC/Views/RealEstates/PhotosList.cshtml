@model IEnumerable<BrokerMVC.Models.RealEstatePhoto>

@{
    ViewBag.Title = General.SiteName + " - " + ViewBag.RealEstateName + " - " + General.Edit + " " + General.Images;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
          
            <div class="col-md-7 col-xs-8 pull-right">
                <h2>@ViewBag.RealEstateName / @General.Edit - @General.Images</h2>
            </div>
            <div class="col-md-3 col-xs-12">
                <div class="btn-group btn-group-status pull-left">
                    <a href='@Url.Action("Edit",new{id=ViewBag.RealEstateID })' data-toggle="tooltip" data-placement="bottom" title="@General.BackToList" data-original-title="@General.BackToList" class="btn btn-group-sm btn-back">
                        <strong> <i class="fa fa-arrow-circle-left fa-2x"></i></strong>
                    </a>
                    <button type="button" onclick="AddNewRealEstatePhoto(@ViewBag.RealEstateID)" rel="@General.Add" class=" btn btn-group-sm btn-success" data-target="#divModal" data-toggle="modal">
                        <strong> <i class="fa fa-plus-circle fa-2x"></i></strong>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-body">
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 pull-right">
                    @if (item.IsDefault == true)
                    {
                        <h4 class="title-opcity">
                            <i class="fa fa-bullseye" aria-hidden="true"></i>
                            @General.DefaultImage
                        </h4>
                    }
                    <div class="row">

                        <img class="img-responsive img-thumbnail img-list" src="~/@item.PhotoName.Replace("~/", "")" />
                    </div>
                    <div class="row list-controls">
                        <div class="btn-group btn-group-justified btn-success">
                            <div class="btn-group">
                                <a href='@Url.Action("SetDefault", "RealEstates", new { id = item.ID })' class="btn  btn-success"><i class="fa fa-bullseye"></i></a>
                            </div>
                     
                            <div class="btn-group">
                                <a href='@Url.Action("DeletePhoto", "RealEstates", new { id = item.ID })' class="btn btn-success Deleteconfirm"><i class="fa fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            @Html.Partial("_EmptyMessage")
        }
    </div>
</div>
