@model BrokerMVC.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = General.PageTitle + "- " + General.ForgetPassword;
    Layout = "~/Views/Home/_Layout.cshtml";
}

<div class="inner-banner">
    <!-- banner start  -->
    <span class="full-size-img" style="background:url(../../Content/_ui/img/media/slide-6.jpg) no-repeat center top / cover"></span>
    <!-- // banner end -->
    <div class="block-title">
        <div class="container">
            <h1>@General.ForgetPassword</h1>
        </div>
    </div>
</div>
<div class="content">
    <div class="container">
        <link href="/Content/login.css" rel="stylesheet">
        <div>
            <div class="col-md-3"></div>
            <div class="col-md-6 col-sm-12">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="login-form">
                        <div class="col-md-12">
                            <div class="form-group" style="direction: rtl">
                                @Html.Partial("_Notifications")
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="nameLogin">@General.UserNameEmailMobilNo<i class="fa fa-angle-double-left" aria-hidden="true"></i></label>
                                @*<input class="form-control" id="nameLogin">*@
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-02 fs-18">@General.ResetPassword</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>