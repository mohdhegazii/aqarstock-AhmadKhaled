@model BrokerMVC.Models.CompanyMessage

@using (Html.BeginForm("SendCompanyMessage", "home", FormMethod.Post, htmlAttributes: new { @id = "MessageForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyID)
    @Html.HiddenFor(model => model.ProjectID)
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = General.FullName } })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = General.Phone } })
    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = General.Email } })
    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @type = "text", placeholder = General.Message })
    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
    <button id="btnSendMessage" class="btn btn-send">@General.Send <i class="fa fa-paper-plane-o"></i></button>

}

