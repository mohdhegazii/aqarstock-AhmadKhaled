@model BrokerMVC.Models.LoginViewModel
@using (Html.BeginForm("PropertyLogin", "Home", FormMethod.Post, htmlAttributes: new { @id = "LoginForm" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">@General.Signin</h4>
    </div>
    <div class="modal-body">
        <div class="send-complain-form">
            @Html.Partial("_Notifications")
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = General.UserName })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = General.Password })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-04" data-dismiss="modal">@General.Close</button>
        <button type="button" onclick="GetRegister()" class="btn btn-theme btn-back">@General.RegisterTitle</button>
        <button id="btnLogin" type="submit" class="btn btn-03">@General.Signin </button>
    </div>
              
}
