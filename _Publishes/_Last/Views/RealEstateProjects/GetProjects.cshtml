@model PagedList.IPagedList<BrokerMVC.Models.RealEstateProject>
@using PagedList.Mvc;
@{
    ViewBag.Title = General.SiteName + " - " + General.ProjectList;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
@helper selected(string c, string culture)
{
if (c == culture)
{
        @:checked="checked"
    }
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6 pull-right">
                <h2>
                    <i class="fa fa-industry fa-fw"></i>

                    @if (ViewBag.type != null)
                    {
                        @General.CompanyProjects
                    }
                    else
                    {
                        @General.MyProjects
                    }
                </h2>
            </div>
            <div class="btn-group pull-left">
                <a href='@Url.Action("Create")' class="btn btn-group-lg btn-success">
                    <i class="fa fa-plus-square"></i>
                    @General.CreateNew
                </a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("GetProjects", "RealEstateProjects", FormMethod.Get))
        {
            <div class="">
                <div class="form-horizontal">
                    <div class="form-group">
                        <span class="control-label col-md-1 pull-right">@General.ProjectName</span>
                        <div class="col-md-11">
                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-group-lg btn-success" value="@General.Search" />
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <table class="table table-responsive table-bordered table-striped table-hover">
                <tr class="warning">
                    <th class="text-center">
                        @Html.ActionLink(General.Name, "GetProjects", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter, type = ViewBag.type })
                    </th>
                    <th class="text-center">
                        @Html.ActionLink(General.EnglishName, "GetProjects", new { sortOrder = ViewBag.EnNameSortParm, currentFilter = ViewBag.CurrentFilter, type = ViewBag.type })
                    </th>
                    <th class="text-center">
                        @General.Suspended
                    </th>
                    <th class="text-center">@General.Edit</th>
                    <th class="text-center">@General.Delete</th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.EnTitle)
                        </td>
                        <td class="text-center">
                            @if (item.ActiveStatusID == (int)ActiveStatus.Suspended)
                            {
                                <i class="fa fa-pause text-danger"></i>
                            }
                        </td>

                        <td class="text-center">
                            <a href='@Url.Action("Edit", new { id = item.ID })' class="btn btn-small">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href='@Url.Action("delete", new { id = item.ID })' class="btn btn-small Deleteconfirm">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="row text-center">
            <div class="Paging">
                @*صفحة @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) من @Model.PageCount*@

                @Html.PagedListPager(Model, page => Url.Action("GetProjects",
    new { page, sortOrder = ViewBag.CurrentSort, type = ViewBag.type, currentFilter = ViewBag.CurrentFilter }), new PagedListRenderOptions { LiElementClasses = new List<string> { "Pageitem" } })
            </div>
        </div>
    </div>
</div>
