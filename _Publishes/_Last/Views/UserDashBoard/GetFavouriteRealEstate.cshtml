@model IEnumerable<BrokerMVC.Models.SubscriberFavouriteRealEstate>
@{
    //using re;
    ViewBag.Title = General.SiteName + " - " + General.FavouriteRealestates;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();

}
@helper selected(string c, string culture)
{
if (c == culture)
{
        @:checked="checked"
    }
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-7 col-xs-8 pull-right">
                <h2>
                    <i class="fa fa-bookmark-o fa-fw"></i>

            @General.FavouriteRealestates
                </h2>
            </div>
            </div>
        </div>
    <div class="panel panel-body">
        <div class="row">
            <table class="table table-responsive table-bordered table-striped table-hover">
                <tr class="warning">
                    <th class="text-center">
                      @General.AdTitle
                    </th>
                    <th class="text-center">
                        @General.Available
                    </th>
                    <th class="text-center">@General.View</th>
                    <th class="text-center">@General.Delete</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <div data-toggle="collapse" data-target="#divrealestate-@item.ID" aria-expanded="false" aria-controls="divContact-@item.ID">
                                <i class="fa fa-angle-down" aria-hidden="true"></i>
                                @Html.DisplayFor(modelItem => item.RealEstate.Title)
                            </div>
                        </td>
                        <td class="text-center">
                            @if (item.RealEstate.IsSold == true)
                            {
                                <span class="fa-stack">
                                    <i class="fa fa-shopping-basket fa-stack-1x" aria-hidden="true"></i>
                                    <i class="fa fa-ban fa-stack-2x text-danger" aria-hidden="true"></i>
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            <a target="_blank" href='http://aqarstock.com/Details/@item.RealEstateID/@Commons.EncodeText(item.RealEstate.Title)' class="btn btn-small">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href='@Url.Action("DeleteFavouriteRealestate","UserDashboard", new { id = item.ID })' class="btn btn-small Deleteconfirm">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    <tr id="divrealestate-@item.ID" class="collapse tr-colspan">


                        <td colspan="6" class="td-colspan text-warning">
                            <div class="col-md-12 pull-right">
                                <i class="fa fa-map" aria-hidden="true"></i>
                                @Html.DisplayFor(modelItem => item.RealEstate.Address)
                                <br />
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                                @Html.DisplayFor(modelItem => item.RealEstate.RealEstateType.Title) @Html.DisplayFor(modelItem => item.RealEstate.SaleType.Title) -
                                @Html.DisplayFor(modelItem => item.RealEstate.Area) @General.Meter -
                                @Html.DisplayFor(modelItem => item.RealEstate.Price) @Html.DisplayFor(modelItem => item.RealEstate.Currency.Name) -
                                @Html.DisplayFor(modelItem => item.RealEstate.PaymentType.Title) - @Html.DisplayFor(modelItem => item.RealEstate.RealEstateStatu.Title)

                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
</div>